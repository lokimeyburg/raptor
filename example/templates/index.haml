%html
  %head
    :css
      * {
        margin: 0;
        padding: 0;
      }
      html, body {
        height: 100%
      }
      body {
        font-family: "Arial";
      }
      #container {
        margin: auto;
        width: 800px;
        text-align: center
      }
      h1, h2 {
        font-size: 400%;
        color: #333;
        text-stroke: 1px solid #000
      }
    %title WebSocket Disco
  %body
    %div#container
      %h1 Raptor is processing
      %h2
        %span#count
          0
        Messages/Second!!!1
    %script{src: "/raptor.min.js"}
    :javascript
      var count = 0
      Raptor.host    = "0.0.0.0"
      Raptor.ws_port = "8080"
      Raptor.wss_port = "8080"
      Raptor.log = function(data) {
        console.log('\t\t', data);
      };
      var raptor = new Raptor('#{Raptor.key}', {disableStats: true});
      raptor.bind('raptor:error', function(data) { alert(data['message']) })
      var myChannel = raptor.subscribe('#{@channel}');
      myChannel.bind('an_event', function(data) {
        document.body.setAttribute('style', 'background-color: ' + data['color'] + ';' );
        count++;
      })
      window.setInterval(function() {
        document.getElementById('count').innerHTML = count
        count = 0
      }, 1000)